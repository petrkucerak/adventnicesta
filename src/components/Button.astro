---
interface Props {
  content: string;
  target: string;
  href?: string;
  rel?: string;
  className?: string;
}

const { href, content, target = "_self", rel = "", className="bg-violet-light" } = Astro.props;
---

<a
  href={href}
  class={`${className} rounded text-white px-4 py-2 font-semibold hover:scale-110 duration-200 my-4`}
  rel={rel}
  target={target}
>
  <button title={content}>{content}</button>
</a>
